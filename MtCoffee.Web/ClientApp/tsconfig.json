{
  "extends": "./src/build/config/tsconfig.paths.json",
  "compilerOptions": {
    "lib": [
      "es2018",
      "dom",
      "esnext.asynciterable"
    ],
    "importHelpers": false,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "newLine": "LF",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "noEmit": true,
    "noFallthroughCasesInSwitch": false
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "include": [
    "src"
  ]
}
